{
  "name": "chatterbox-express",
  "version": "1.0.0",
  "description": "Production-ready Express API for Chatterbox iOS app",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "resend": "^4.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "express",
    "api",
    "ios",
    "swift",
    "production",
    "clean-architecture"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "environmentVariables": {
    "required": [
      "RESEND_API_KEY",
      "DB_SEND_PASSWORD",
      "JWT_SECRET"
    ],
    "optional": [
      "PORT",
      "NODE_ENV",
      "CORS_ORIGIN"
    ]
  }
